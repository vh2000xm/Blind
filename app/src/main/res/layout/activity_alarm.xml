<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="@color/white"
    tools:layout_editor_absoluteY="25dp">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="284dp"
        android:layout_height="234dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="22dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/user_setting"
                android:textAlignment="center"
                android:textColor="@color/Main_Blue" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TimePicker
                android:id="@+id/timepicker"
                android:layout_width="268dp"
                android:layout_height="73dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black"
                android:theme="@style/AppTheme.Picker"
                android:timePickerMode="spinner"
                android:visibility="visible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <ImageButton
                    android:id="@+id/btn_arlam_25per"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="22dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/btn_25per" />

                <ImageButton
                    android:id="@+id/btn_50per"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/btn_25per"
                    android:background="@android:color/transparent"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/btn_50per" />

                <ImageButton
                    android:id="@+id/btn_75per"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/btn_50per"
                    android:background="@android:color/transparent"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/btn_75per" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>